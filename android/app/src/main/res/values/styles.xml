<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:editTextBackground">@drawable/rn_edit_text_material</item>
        <item name="android:forceDarkAllowed">true</item>
    </style>

    <style name="AppTheme.Light" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:datePickerDialogTheme">@style/Dialog.Theme.Light</item>
        <item name="android:timePickerDialogTheme">@style/Dialog.Theme.Light</item>
    </style>

    <style name="AppTheme.Dark" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:datePickerDialogTheme">@style/Dialog.Theme.DayNight</item>
        <item name="android:timePickerDialogTheme">@style/Dialog.Theme.DayNight</item>
    </style>

    <style name="Dialog.Theme.Light" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">#5A3D86</item>
        <item name="android:windowBackground">#FFFFFF</item>
        <item name="android:colorControlActivated">#5A3D86</item>
        <item name="android:textColorPrimary">#292929</item>
        <item name="android:textColorSecondary">#5A3D86</item> 
    </style>

    <style name="Dialog.Theme.DayNight" parent="Theme.AppCompat.DayNight.Dialog">
        <item name="colorAccent">#C0A7E1</item>
        <item name="android:windowBackground">#292929</item>
        <item name="android:colorControlActivated">#C0A7E1</item>
        <item name="android:textColorPrimary">#FFFFFF</item> <!--days of the month-->
        <item name="android:textColorSecondary">#C0A7E1</item> 
    </style>

    <style name="AppTheme.Dynamic" parent="AppTheme">
        <item name="android:theme">?attr/colorSecondaryVariant</item>
    </style>

</resources>
